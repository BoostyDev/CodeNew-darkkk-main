---
import Logo3D from '@/components/home/Logo3D.astro';
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from '@/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
import arrowIcon from '@/assets/icons/arrow-big.svg';
---

<main class='flex flex-col-reverse relative justify-center items-center section text-center min-h-screen pb-40 text-white'>
	<div class='absolute -z-10 h-full w-full bg-transparent'>
		<div
    class='absolute bottom-0 left-0 right-0 top-0 opacity-20 bg-[linear-gradient(to_right,#ffffff_1px,transparent_1px),linear-gradient(to_bottom,#ffffff_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]'>
</div>

	</div>

	<div>
		<h1 class='text-5xl md:text-7xl font-bold inline-block anim-typewriter'>
			CodeNew
		</h1>
		<p class='opacity-85 mt-3 max-w-[45em]'>
			{t('home.description')}
		</p>
		<a
		href={translatePath('/contact')}
		class='appear'>
		<button
			class='px-8 py-2 rounded-full transition-colors hover:bg-white font-medium border border-indigo-600 outline-1 bg-indigo-600 text-white hover:text-slate-900'>
			{t('home.meeting')}
		</button>
		</a>
	</div>
	<Logo3D />
</main>

<style>
	.anim-typewriter {
		width: 7.18em;
		margin: 0 auto;
		border-right: 10px solid rgba(79, 70, 229, 1);
		white-space: nowrap;
		overflow: hidden;
	}
</style>

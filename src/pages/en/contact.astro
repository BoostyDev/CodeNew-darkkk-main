---
import Calendly from '@/components/contact/Calendly.astro';
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Hero from '@/components/contact/Hero.astro';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title='CodeNew - Contact'>
	<main class='section min-h-screen bg-background text-text'>
		<Hero />

		<section class='mt-20 mb-10'>
			<h3 class='text-3xl mb-1 font-medium'>
				{t('contact.cale.subtitle')}
			</h3>
			<p class='max-w-[56ch]'>
				{t('contact.cale.description')}
			</p>
			<Calendly />
		</section>
	</main>
</Layout>

---
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="CodeNew - Politics">
  <main class="section min-h-screen bg-background text-text">
    <section class="grid relative items-center pt-20 md:grid-cols-2 gap-6">
      <!-- Contenido de la sección -->
      <div class="z-10 border-4 border-indigo-600/50 p-8 rounded-xl">
        <h3 class="text-white border-2 inline-block font-medium px-6 py-1 border-indigo-600/50 rounded-full">
          {t('politics.title')}
        </h3>
        <h1 class="text-3xl text-white font-medium my-2">{t('politics.description')}</h1>

       

        <!-- Sección de Privacy -->
        <article class="mt-8 text-white">
          <h4 class="text-2xl font-medium">{t('politics.privacy.title')}</h4>
          <p>{t('politics.privacy.intro')}</p>

          <ul class="list-disc pl-6 space-y-4 mt-4">
            <li><strong>{t('politics.privacy.dataCollection.title')}:</strong> {t('politics.privacy.dataCollection.content')}</li>
            <li><strong>{t('politics.privacy.cookies.title')}:</strong> {t('politics.privacy.cookies.content')}</li>
            <li><strong>{t('politics.privacy.useOfData.title')}:</strong> {t('politics.privacy.useOfData.content')}</li>
            <li><strong>{t('politics.privacy.security.title')}:</strong> {t('politics.privacy.security.content')}</li>
            <li><strong>{t('politics.privacy.rights.title')}:</strong> {t('politics.privacy.rights.content')}</li>
          </ul>
        </article>
      </div>
    </section>
  </main>
</Layout>

---
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="CodeNew - Imprint">
  <main class="section min-h-screen bg-background text-text">
    <section class="grid relative items-center pt-20 md:grid-cols-2 gap-6">
      <!-- Contenido de la sección -->
      <div class="z-10 border-4 border-indigo-600/50 p-8 rounded-xl">
        <h3 class="text-white border-2 inline-block font-medium px-6 py-1 border-indigo-600/50 rounded-full">
          {t('imprint.title')}
        </h3>
        <h1 class="text-3xl text-white font-medium my-2">{t('imprint.description')}</h1>

        <!-- Sección de Imprint -->
        <article class="mt-8 text-white">
          <h4 class="text-2xl font-medium">{t('imprint.contact.title')}</h4>
          <ul class="list-disc pl-6 space-y-4 mt-4">
            <li><strong>{t('imprint.contact.name')}:</strong> {t('imprint.contact.value')}</li>
            <li><strong>{t('imprint.contact.address')}:</strong> {t('imprint.contact.addressValue')}</li>
            <li><strong>{t('imprint.contact.phone')}:</strong> {t('imprint.contact.phoneValue')}</li>
            <li><strong>{t('imprint.contact.email')}:</strong> {t('imprint.contact.emailValue')}</li>
            <li><strong>{t('imprint.contact.owner')}:</strong> {t('imprint.contact.ownerValue')}</li>
            <li><strong>{t('imprint.contact.taxID')}:</strong> {t('imprint.contact.taxIDValue')}</li>
          </ul>
        </article>
      </div>
    </section>
  </main>
</Layout>
